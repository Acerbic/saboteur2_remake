{
  "name": "saboteur2_remake",
  "version": "1.0.0",
  "description": "Remake of a website (saboteur2.ru) in modern HTML+CSS",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "http-server -a localhost -p 8000 -c-1",
    "gulp": "gulp",
    "watch": "gulp watch",
    "build": "gulp",
    "_now_oss": "npm run build && rm ./public/audio/sab2_endika.mp3 && echo Build finished. Ready to deploy...",
    "deploy": "npm run _now_oss && now | xargs -I % cross-env-shell now alias % $npm_package_now_alias"
  },
  "now": {
    "alias": "saboteur2ru-remake.now.sh",
    "public": true,
    "type": "static",
    "static": {
      "public": "public",
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|mp3|ogg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=86400"
            }
          ]
        },
        {
          "source": "**/*.@(html|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=7200"
            }
          ]
        },
        {
          "source": "404.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=300"
            }
          ]
        }
      ]
    },
    "files": [
      "./public"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/GlebVarenov/saboteur2_remake.git"
  },
  "keywords": [
    "game",
    "website",
    "fan",
    "saboteur",
    "saboteur2",
    "remake"
  ],
  "author": "Gleb Varenov",
  "license": "ISC",
  "homepage": "https://bitbucket.org/GlebVarenov/saboteur2_remake#readme",
  "dependencies": {
    "cross-env": "^5.2.0",
    "gulp": "^4.0.0",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-cli": "^2.0.1",
    "gulp-data": "^1.3.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-twig": "^1.2.0",
    "reset-css": "^4.0.1",
    "twig": "^1.12.0"
  },
  "devDependencies": {
    "gulp-clean-css": "^3.10.0",
    "gulp-watch": "^5.0.1",
    "http-server": "^0.11.1"
  }
}
